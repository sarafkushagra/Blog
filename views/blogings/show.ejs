<%- layout("/layouts/sample") %>

<body class="bg-gray-50">
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-4xl font-bold text-purple-600 mb-8 text-center">Blog Details</h1>
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                <div class="p-8">
                    <h1 class="text-3xl font-bold text-gray-800 mb-4">
                        <%= blog.title %>
                    </h1>
                    <div class="flex items-center text-gray-600 mb-6">
                        <span class="text-sm">By <%= blog.owner.username %></span>
                    </div>
                    <div class="prose max-w-none">
                        <h3 class="text-xl font-semibold text-gray-700 mb-3">Description</h3>
                        <p class="text-gray-600 mb-6"><%= blog.description %></p>
                        
                        <h3 class="text-xl font-semibold text-gray-700 mb-3">Content</h3>
                        <div class="text-gray-600 whitespace-pre-wrap"><%= blog.content %></div>
                    </div>
                    
                    <% if(currentUser && currentUser._id.equals(blog.owner._id)){ %>
                    <div class="flex justify-end space-x-4 mt-8 pt-6 border-t border-gray-200">
                        <a href="/blog/<%= blog._id %>/edit" 
                           class="inline-block bg-purple-600 text-white px-6 py-2 rounded-md hover:bg-purple-700 transition duration-300">
                            Edit
                        </a>
                        <form method="POST" action="/blog/<%=blog._id%>?_method=DELETE" class="inline">
                            <button class="bg-red-500 text-white px-6 py-2 rounded-md hover:bg-red-600 transition duration-300">
                                Delete
                            </button>
                        </form>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>