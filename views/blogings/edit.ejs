<%- layout("/layouts/sample") %>
<body class="bg-gray-50">
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-3xl mx-auto">
            <h1 class="text-3xl font-bold text-purple-600 mb-8 text-center">Edit Blog</h1>
            <div class="bg-white rounded-lg shadow-lg p-6">
                <form action="/blog/<%= blog._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
                    <div class="mb-6">
                        <label for="title" class="block text-gray-700 text-lg font-semibold mb-2">Title</label>
                        <input name="blog[title]" value="<%= blog.title %>" id="title" placeholder="Enter title" type="text" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" required />
                        <div class="valid-feedback text-green-600">Looks good!</div>
                    </div>
                    <div class="mb-6">
                        <label for="description" class="block text-gray-700 text-lg font-semibold mb-2">Description</label>
                        <input name="blog[description]" value="<%= blog.description %>" id="description" placeholder="Enter description" type="text"
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" required />
                        <div class="valid-feedback text-green-600">Looks good!</div>
                    </div>
                    <div class="mb-6">
                        <label for="content" class="block text-gray-700 text-lg font-semibold mb-2">Content</label>
                        <textarea name="blog[content]" id="content" placeholder="Enter content" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent h-40" required><%= blog.content %></textarea>
                    </div>
                    <button class="w-full bg-purple-600 text-white py-3 px-6 rounded-md hover:bg-purple-700 transition duration-300 font-semibold">
                        Update Blog
                    </button>
                </form>
            </div>
        </div>
    </div>
</body>